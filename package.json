{
  "name": "legislated",
  "version": "0.1.0",
  "description": "Understand the illinois legislature",
  "main": "dist/bundle.js",
  "author": "Ty Cobb",
  "license": "MIT",
  "scripts": {
    "start": "./bin/webpack-dev-server",
    "start:server": "NODE_ENV=server WEBPACKER_DEV_SERVER_INLINE=false ./bin/webpack-dev-server",
    "build:staging": "webpack -p --env.env=staging",
    "build:prod": "webpack -p --env.env=production",
    "hypernova": "NODE_ENV=server node hypernova",
    "hypernova:debug": "NODE_ENV=server node inspect hypernova",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect --debug-brk ./node_modules/.bin/jest --runInBand",
    "lint": "yarn lint:bare | snazzy",
    "lint:fix": "yarn lint:bare --fix | snazzy",
    "lint:bare": "standard './app/javascript/**/*.js'",
    "flow": "flow",
    "flow:restart": "flow stop && flow",
    "relay": "relay-compiler --src ./src --schema schema.json",
    "relay:watch": "yarn relay --watch",
    "validate": "yarn lint && yarn flow && yarn test"
  },
  "dependencies": {
    "@rails/webpacker": "^3.0.2",
    "babel-runtime": "^6.26.0",
    "color": "^2.0.0",
    "date-fns": "^1.29.0",
    "eventemitter3": "^2.0.3",
    "glamor": "2.20.40",
    "isomorphic-fetch": "^2.2.1",
    "js-base64": "^2.1.9",
    "lodash": "^4.17.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-copy-to-clipboard": "^5.0.0",
    "react-dom": "^16.1.1",
    "react-fontawesome": "^1.6.1",
    "react-relay": "^1.1.0",
    "react-router-dom": "^4.1.2",
    "react-router-scroll-4": "^1.0.0-beta.1",
    "react-sticky": "6.0.1",
    "react-transition-group": "1.x"
  },
  "devDependencies": {
    "@dhau/relay-compiler-webpack-plugin": "^0.5.5",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "8.0.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-relay": "^1.1.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "concat-stream": "^1.6.0",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "eslint": "3.x",
    "flow-bin": "^0.50.0",
    "graphql": "^0.11.7",
    "hypernova": "^2.1.3",
    "hypernova-react": "^2.0.0",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "react-test-renderer": "^16.1.1",
    "relay-compiler": "^1.1.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "graphql": {
    "file": "./schema.json"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ],
      "react",
      "stage-2"
    ],
    "plugins": [
      [
        "relay",
        {
          "schema": "schema.json"
        }
      ],
      "lodash",
      "transform-runtime"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./app/javascript/test/setupFramework.js",
    "setupFiles": [
      "./app/javascript/test/setup.js"
    ],
    "roots": [
      "./app/javascript"
    ],
    "moduleNameMapper": {
      "^shared/(.*)$": "<rootDir>/app/javascript/src/shared/$1",
      "^mocks/(.*)$": "<rootDir>/app/javascript/test/mocks/$1",
      ".*\\.png$": "<rootDir>/app/javascript/test/stubs/image.js"
    },
    "clearMocks": true
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "flow-typed/"
    ],
    "globals": [
      "fetch",
      "requestAnimationFrame",
      "Class",
      "React$Element",
      "React$Component"
    ]
  }
}
