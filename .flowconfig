[ignore]
.*/dist
.*/node_modules/graphql/.*
.*/node_modules/jest-enzyme/.*
.*/node_modules/enzyme-matchers/.*
.*/node_modules/babel-plugin-emotion/.*
.*/node_modules/@dhau/relay-compiler-webpack-plugin/.*

[include]
./app/javascript

[libs]
./flow-typed

[options]
emoji=true

suppress_type=$FlowIssue
suppress_type=$FlowFixMe
suppress_type=$FixMe

; mappers
module.name_mapper='^@\/\(.*\)$' -> '<PROJECT_ROOT>/app/javascript/src/shared/\1'

; optional features
esproposal.decorators=ignore
unsafe.enable_getters_and_setters=true
